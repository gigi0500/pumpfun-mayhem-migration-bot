# Server Configuration
PORT=3006
NODE_ENV=development

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=your_wallet_private_key_here
SOLANA_PUBLIC_KEY=your_wallet_public_key_here

# Migration Bot Configuration
MIGRATION_ENABLED=true
BONDING_CURVE_THRESHOLD=0.95
AUTO_MIGRATE=true
PRE_MIGRATION_ENTRY=true
POST_MIGRATION_EXIT=false

# Risk Management
MAX_POSITION_SIZE=1.0
STOP_LOSS_PERCENTAGE=10
TAKE_PROFIT_PERCENTAGE=50

# Monitoring
MONITOR_INTERVAL_MS=5000
TOKEN_ADDRESSES=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/migration.log

